{
	"compilerOptions": {
		"moduleResolution": "node",
		"outDir": "./lib",
		"allowJs": true,
		"checkJs": false,
		"target": "es2017",
		"lib": ["es2021", "dom", "DOM.Iterable"],
		"strict": true,
		"esModuleInterop": true,
		"declaration": false,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"baseUrl": "./src",

		"resolveJsonModule": true
	},
	"include": ["./src/**/*.ts", "src/index.ts"]
}
